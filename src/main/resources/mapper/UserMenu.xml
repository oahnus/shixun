<?xml version = "1.0" encoding = "UTF-8"?>
<!DOCTYPE mapper PUBLIC
        "-//mybatis.org//DTD com.example.Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace = "top.oahnus.mapper.UserMenuMapper">
    <resultMap id = "userMenu_map" type= "top.oahnus.entity.UserMenu">
        <result property = "id" column = "id" javaType="Integer"/>
        <result property = "keyName" column = "key_name" javaType="String"/>
        <result property = "name" column = "name" javaType="String"/>
        <result property = "icon" column = "icon" javaType="String"/>
        <result property = "href" column = "href" javaType="String"/>
        <result property = "parentId" column = "parentId" javaType="Integer"/>
        <result property = "type" column = "auth_type" typeHandler="top.oahnus.handler.AuthTypeHandler"/>
    </resultMap>
    <select id = "selectRootUserMenuByAuthType" resultMap = "userMenu_map">
        SELECT
        id, key_name, name, icon, href, parent_id, auth_type
        FROM user_menu
        WHERE auth_type = #{authType} AND parent_id = 0;
    </select>

    <select id="selectChildUserMenuByParentId" resultMap="userMenu_map">
        SELECT
        id, key_name, name, icon, href, parent_id, auth_type
        FROM user_menu
        WHERE parent_id = #{parentId}
    </select>
</mapper>