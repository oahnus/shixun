<?xml version = "1.0" encoding = "UTF-8"?>
<!DOCTYPE mapper PUBLIC
        "-//mybatis.org//DTD com.example.Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace = "top.oahnus.mapper.TeacherMapper">

    <resultMap id="teacher_map" type="Teacher">
        <result column="id" property="id" javaType="String"/>
        <result column="worker_id" property="workerId" javaType="String"/>
        <result column="name" property="name" javaType="String"/>
        <result column="sex" property="sex" javaType="String"/>
        <result column="job_title" property="jobTitle" javaType="String"/>
        <result column="profession" property="profession" javaType="String"/>
        <result column="depart" property="depart" javaType="String"/>
        <result column="email" property="email" javaType="String"/>
    </resultMap>

    <sql id="base_columns">
        id, worker_id, name, sex, job_title, profession, depart, email
    </sql>
    
    <!--Query-->
    <select id="selectTeacherByProfession" resultMap="teacher_map">
        SELECT
        <include refid="base_columns"/>
        FROM teacher WHERE profession = #{profession} LIMIT #{offset},#{limit}
    </select>

    <select id="selectTeacherByWorkerId" resultMap="teacher_map">
        SELECT
        <include refid="base_columns"/>
        FROM teacher WHERE worker_id = #{worker_id}
    </select>

    <select id="selectTeacherByDepart" resultMap="teacher_map">
        SELECT
        <include refid="base_columns"/>
        FROM teacher WHERE depart = #{depart} LIMIT #{offset},#{limit}
    </select>

    <!--insert-->
    <insert id="insertIntoTeacher" parameterType="List">
        INSERT IGNORE INTO teacher
        (worker_id, name, sex, job_title, profession, depart, email)
        VALUES
        <foreach collection="list" separator="," item="item" index="index">
            (#{item.workerId}, #{item.name}, #{item.sex}, #{item.jobTitle}, #{item.profession}, #{item.depart}, #{item.email})
        </foreach>
    </insert>

    <!--update-->
    <update id="updateTeacher" parameterType="Teacher">
        UPDATE teacher SET
        worker_id = #{workerId},
        name = #{name},
        sex = #{sex},
        job_title = #{jobTitle},
        depart = #{depart},
        profession = #{profession},
        email = #{email}
        WHERE id = #{id}
    </update>

    <!--delete-->
    <delete id="deleteTeacherById" parameterType="String">
        DELETE FROM teacher WHERE id = #{id}
    </delete>
</mapper>