<?xml version = "1.0" encoding = "UTF-8"?>
<!DOCTYPE mapper PUBLIC
        "-//mybatis.org//DTD com.example.Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace = "top.oahnus.mapper.TaskResultMapper">
    <resultMap id="task_result_map" type="TaskResult">
        <result column="id" property="id" javaType="String"/>
        <result column="task_id" property="taskId" javaType="String"/>
        <result column="student_id" property="student.id" javaType="String"/>
        <result column="student_num" property="studentNum" javaType="String"/>
        <result column="name" property="name" javaType="String"/>
        <result column="sex" property="sex" javaType="String"/>
        <result column="profession" property="profession" javaType="String"/>
        <result column="depart" property="depart" javaType="String"/>
        <result column="email" property="email" javaType="String"/>
        <result column="content" property="content" javaType="String"/>
        <result column="memo" property="memo" javaType="String"/>
        <result column="create_time" property="createTime" javaType="Date"/>
    </resultMap>

    <sql id="base_sql">
        id, task_id, student_id, content, memo, create_time,
        student_num, name, sex, profession, depart, email
    </sql>

    <!-- query -->

    <select id="selectTaskResultByStudentIdAndTaskId" resultMap="task_result_map">
        SELECT
        <include refid="base_sql"/>
        FROM task_result
        LEFT JOIN student ON student_id = student.id
        WHERE student_id = #{studentId}
        AND task_id = #{taskId}
    </select>

    <select id="selectTaskResultByTaskId" resultMap="task_result_map">
        SELECT <include refid="base_sql"/>
        FROM task_result
        LEFT JOIN student ON student_id = student.id
        WHERE task_id = #{taskId}
    </select>

    <select id="selectTaskResultById" resultMap="task_result_map">
        SELECT <include refid="base_sql"/>
        FROM task_result
        LEFT JOIN student ON student_id = student.id
        WHERE id = #{taskResultId}
    </select>

    <select id="selectTaskResult" resultMap="task_result_map">
        SELECT <include refid="base_sql"/>
        FROM task_result
        LEFT JOIN student ON student_id = student.id
        LEFT JOIN course_task
        ON task_id = course_task.id
        LEFT JOIN course
        ON course.id = course_task.course_id
        WHERE 1 = 1
        <if test="">
            AND course_id = #{courseId}
        </if>
        <if test="">
            AND student_id = #{studentId}
        </if>
        <if test="">
            AND task_id = #{taskId}
        </if>
    </select>

    <!-- insert -->
    <insert id="insertNewTaskResult" parameterType="TaskResult">
        INSERT INTO task_result
        (id, task_id, student_id, content, memo)
        VALUE
        (NULL, #{taskId}, #{studentId}, #{content}, #{memo})
    </insert>

    <!-- update -->
    <update id="updateTaskResult" parameterType="TaskResult">
        UPDATE task_result SET
            content = #{content},
            memo = #{memo}
        WHERE id = #{id}
    </update>

    <!-- delete -->
    <delete id="deleteTaskResult" parameterType="String">
        DELETE FROM task_result WHERE id = #{taskResultId}
    </delete>
</mapper>